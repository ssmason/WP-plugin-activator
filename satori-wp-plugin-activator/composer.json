{
	"name": "satori-digital/wp-plugin-activator",
	"type": "wordpress-plugin",
	"description": "Allows activation of plugins in code for WordPress sites",
	"authors": [
		{
			"name": "Stephen Mason",
			"homepage": "https://satori-digital.com/"
		}
	], 
	"require-dev": {
		"wp-phpunit/wp-phpunit": "^6.8",
		"yoast/phpunit-polyfills": "^4.0",
		"vlucas/phpdotenv": "^5.6",
		"phpunit/phpunit": "^9.6",
		"pestphp/pest": "^1.22",
		"pestphp/pest-plugin-coverage": "^1.0",
		"mockery/mockery": "^1.6",
		"squizlabs/php_codesniffer": "^3.13",
		"wp-coding-standards/wpcs": "^3.2",
		"phpcompatibility/php-compatibility": "^9.3",
		"slevomat/coding-standard": "^8.15",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"scripts": {
		"php:lint": "vendor/bin/phpcs src/",
		"php:fix": "vendor/bin/phpcbf src/",
		"test": "vendor/bin/pest",
		"php:lint-report": "vendor/bin/phpcs src/ --report=full --report-file=phpcs-report.txt",
		"php:unit-test": "./vendor/bin/pest",
		"install-wp-tests": [
			"bash -c 'set -a; [ -f .env.testing ] && . ./.env.testing; set +a; WP_CORE_DIR=${WP_CORE_DIR:-$(pwd)/.wp-tests/wordpress} WP_TESTS_DIR=${WP_TESTS_DIR:-$(pwd)/.wp-tests/wp-tests-lib} bash tests/bin/install-wp-tests.sh ${WP_DB_NAME:-wordpress_test} ${WP_DB_USER:-root} \"${WP_DB_PASS:-}\" ${WP_DB_HOST:-localhost} ${WP_VERSION:-latest}'"
		],
		"test-plugin": "vendor/bin/pest"
	},
	"autoload": {
		"psr-4": {
			"SatoriDigital\\PluginActivator\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"pestphp/pest-plugin": true
		}
	}
}
